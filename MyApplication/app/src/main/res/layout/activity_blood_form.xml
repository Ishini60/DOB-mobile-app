<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/bg_view"
        tools:ignore="InvalidId" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/top_view">

        <androidx.cardview.widget.CardView
            android:layout_width="500dp"
            android:layout_height="675dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:text="Blood Donation Form"
                android:textColor="#0C0C10"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/editname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="60dp"
                android:ems="10"

                android:hint="Your Full Name" />

            <EditText
                android:id="@+id/editage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Your Age" />

            <EditText
                android:id="@+id/editbirth"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="140dp"
                android:ems="10"
                android:hint="Your Date of Birth" />

            <EditText
                android:id="@+id/editphone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="180dp"
                android:ems="10"
                android:hint="Your Phone Number" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="220dp"
                android:ems="10"
                android:hint="Your Email" />

            <EditText
                android:id="@+id/editaddress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="260dp"
                android:ems="10"
                android:hint="Your Address" />

            <EditText
                android:id="@+id/editcity"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="300dp"
                android:ems="10"
                android:hint="Your Nearest City " />

            <EditText
                android:id="@+id/edittype"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="340dp"
                android:ems="10"
                android:hint="Your Blood Type" />

            <EditText
                android:id="@+id/editterm"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="380dp"
                android:ems="10"
                android:hint="Is this your first donation? (yes / no)" />

            <EditText
                android:id="@+id/editillness"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="420dp"
                android:ems="10"
                android:hint="Any illness do you have? (yes / no)" />


            <Button
                android:id="@+id/buttonregister"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="500dp"
                android:text="Register" />

            <Button
                android:id="@+id/buttoncancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="500dp"
                android:text="Cancel" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical">

        </LinearLayout>

    </GridLayout>


</RelativeLayout>